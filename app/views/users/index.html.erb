<%= form_tag(users_path, method: :get) do %>
  <div class="control">
    <%= text_field_tag :query, @query, placeholder: "ユーザーを検索する" %>
  </div>
  <div class="control">
    <%= submit_tag "検索" %>
  </div>
<% end %>
<div>
<% @users.each do |user| %>
  <div>
    <%= user.name %>
    <%= form_tag(nice_user_path(user.id), method: :post) do %>
      <%= submit_tag "👍" %>
    <% end %>
  </div>
<% end %>
</div>
